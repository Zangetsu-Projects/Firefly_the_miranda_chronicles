<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/actselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/act1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:visibility="invisible"
            android:text="Act 1" />

        <Button
            android:id="@+id/act2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:visibility="invisible"
            android:text="Act 2" />

        <Button
            android:id="@+id/act3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:visibility="invisible"
            android:text="Act 3" />
        
        <Button
            android:id="@+id/act4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:visibility="invisible"
            android:text="Act 4" />
        
        <Button
            android:id="@+id/act5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:visibility="invisible"
            android:text="Act 5" />
        
        <Button
            android:id="@+id/act6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:visibility="invisible"
            android:text="Act 6" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/actscroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/actselect">"

        <RelativeLayout
            android:id="@+id/actgroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/acttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/act1" />

            <TextView
                android:id="@+id/actstats"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acttitle"
                android:padding="10dp"
                android:text="Act 1 stats" />

            <TextView
                android:id="@+id/actdetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/actstats"
                android:padding="10dp"
                android:text="Aquired Knowledge" />

        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/nostats"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="Please complete a level to generate statistics"
        android:visibility="gone" />

</RelativeLayout>